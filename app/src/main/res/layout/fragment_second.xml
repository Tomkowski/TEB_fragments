<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDD2AA"
    tools:context=".frags.FragmentFirst">

    <!-- TODO: Update blank fragment layout -->
    <com.robinhood.ticker.TickerView
        android:id="@+id/fragment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="32sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <Button
        android:id="@+id/button_inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:text="Increment"
        android:padding="16dp"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_text_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>